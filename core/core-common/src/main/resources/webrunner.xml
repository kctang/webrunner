<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <!-- TODO: fix - specify import twice, to overcome failed maven unit tests (class loading issues)-->

    <!--suppress SpringModelInspection -->
    <import resource="classpath*:core-jpa-webrunner.xml"/>

    <!--suppress SpringModelInspection -->
    <import resource="classpath*:*-webrunner.xml"/>

    <context:property-placeholder
            location="
                classpath*:webrunner.properties,
                classpath*:core-jpa-webrunner.properties,
                classpath*:webrunner-test.properties"
            ignore-resource-not-found="true"/>


</beans>